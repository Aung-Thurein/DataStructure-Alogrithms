package com.turing.dsa.sorting;

import static org.junit.jupiter.api.Assertions.assertEquals;
import static org.junit.jupiter.api.Assertions.assertTrue;

import org.junit.jupiter.api.Disabled;
import org.junit.jupiter.api.Test;

public class RadixSortTest {

	
	@Test
	void radixSortTest()
	{
		
		int[] arr = new int [] {51,2,32,-43,9,3,1};

		RadixSort algo = new RadixSort();
		int element = algo.max(arr);
		assertEquals(51, element);
		
		element = algo.digitLength(arr);
		assertEquals(2, element);
		
		algo.sort(arr);
		int []arr1 = new int [] {-43,1,2,3,9,32,51}
		assertEquals(arr1, Util.isSorted(arr));
		
	}
	@Disabled
	@Test
	void radixSortTest1()
	{
		
		int[] arr = new int [] {51,2,32,-433,9,3,1};

		RadixSort algo = new RadixSort();
		algo.sort(arr);
		assertEquals(true, Util.isSorted(arr));
	}
}
