package com.turing.dsa.sorting;

public class ShellSort implements Sortable {

	@Override
	public void sort(int[] arr) {
		int n = arr.length;
		int gap = (int)Math.floor(n / 2.0);
		while(gap >= 1)
		{
			int temp;
			for (int i = gap; i < n; i++) {
				temp = arr[i];
				int j = i;
				for (; (j >= gap) && arr[j-gap] > arr[j]; j-= gap) {
					arr[j] = arr[j-gap];
				}
				arr[j] = temp;
			}
			
			 gap = (int)Math.floor(n / 2);
			
		}
	}

}
